extends layout.pug

block content
    h2 Books
    p
        a.button(href='/books/new') Create new book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
            tbody
                each book in books
                    tr
                        td= book.title
                        td= book.author
                        td= book.genre
                        td= book.year
